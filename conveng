    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('.nav-link');

            const observerOptions = {
                root: null,
                rootMargin: '0px',
                threshold: 0.4
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const id = entry.target.getAttribute('id');
                        navLinks.forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href') === `#${id}`) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

            const sourceData = {
                all: {
                    labels: ['Transit Hubs', 'Busy Sidewalks', 'Vehicular Traffic', 'Ambient Noise'],
                    data: [45, 30, 20, 5],
                },
                transit: {
                    labels: ['Transit Hubs'],
                    data: [100],
                },
                sidewalk: {
                    labels: ['Busy Sidewalks'],
                    data: [100],
                },
                traffic: {
                    labels: ['Vehicular Traffic'],
                    data: [100],
                },
            };
            
            let energySourceChart;
            const createEnergySourceChart = (source = 'all') => {
                const ctx = document.getElementById('energySourceChart').getContext('2d');
                if (energySourceChart) {
                    energySourceChart.destroy();
                }
                energySourceChart = new Chart(ctx, {
                    type: 'doughnut',
                    data: {
                        labels: sourceData[source].labels,
                        datasets: [{
                            label: 'Energy Contribution',
                            data: sourceData[source].data,
                            backgroundColor: ['#0d9488', '#f59e0b', '#2dd4bf', '#99f6e4'],
                            borderColor: '#F5F5F4',
                            borderWidth: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom',
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return `${context.label}: ${context.raw}%`;
                                    }
                                }
                            }
                        }
                    }
                });
            };

            createEnergySourceChart();
            
            document.getElementById('source-buttons').addEventListener('click', (e) => {
                if(e.target.tagName === 'BUTTON') {
                    const source = e.target.dataset.source;
                    createEnergySourceChart(source);
                }
            });


            const impactCtx = document.getElementById('impactChart').getContext('2d');
            const impactChart = new Chart(impactCtx, {
                type: 'bar',
                data: {
                    labels: ['Generated Energy (kWh/day)', 'LED Streetlight', 'Smart Sensor', 'USB Charging Port'],
                    datasets: [{
                        label: 'Energy (kWh)',
                        data: [10, 2.4, 0.2, 1.2],
                        backgroundColor: ['#0d9488', '#f59e0b', '#f59e0b', '#f59e0b'],
                        borderColor: ['#047857', '#d97706', '#d97706', '#d97706'],
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Daily Energy Generation vs. Consumption'
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'kWh'
                            }
                        }
                    }
                }
            });

            const phaseHeaders = document.querySelectorAll('[data-phase]');
            phaseHeaders.forEach(header => {
                header.addEventListener('click', () => {
                    const phaseNumber = header.dataset.phase;
                    const details = document.getElementById(`phase-${phaseNumber}-details`);
                    details.classList.toggle('hidden');
                });
            });
        });
    </script>
